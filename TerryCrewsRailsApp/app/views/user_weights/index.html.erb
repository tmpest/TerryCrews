<p id="notice"><%= notice %></p>

<h1>Listing User Weights</h1>

<table>
  <thead>
    <tr>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_weights.each do |user_weight| %>
      <tr>
        <td><%= user_weight.weight %></td>
        <td><%= link_to 'Show', user_weight %></td>
        <td><%= link_to 'Edit', edit_user_weight_path(user_weight) %></td>
        <td><%= link_to 'Destroy', user_weight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

